<div>
  {{#if title}}
    <h1 class="listTitle">{{title}}</h1>
  {{else}}
    <h1>Unknown Title</h1>
  {{/if}}
  <div class="cardList">
    {{#each products}}
      <div class="card shadow">
        <div class="card-body">
          <h3 class="card-title">{{this.title}}</h3>
          <ul style="list-style: none;">
            <li class="card-text">{{this.id}}</li>
            <li class="card-text">{{this.description}}</li>
            <li class="card-text">{{this.stock}}</li>
            <li class="card-text">{{this.category}}</li>
            <li class="card-text">{{this.code}}</li>
            <li class="card-text">{{this.price}}$</li>
          </ul>
    <div class="addToCart">
  <a href="http://localhost:8085/productId{{this._id}}" class="addToCart-btn">Add to cart</a>
</div>

        </div>
      </div>
    {{/each}}
  </div>
</div>
<div id="pagination" class="pagination">
  {{#if prodColl.hasPrevPage}}
    <a href={{prodColl.prevLink}}><ion-icon
        name="chevron-back-outline"
      ></ion-icon></a>
  {{/if}}
  <select name="pageSelector" id="pageSelect" class="page-select">
    {{#each arrPages}}
      <option value="{{this}}">{{this}}</option>
    {{/each}}
  </select>
  {{#if prodColl.hasNextPage}}
    <a href={{prodColl.nextLink}}><ion-icon
        name="chevron-forward-outline"
      ></ion-icon></a>
  {{/if}}
</div>
<script>
  let currentPage =
  {{prodColl.page}}
</script>
<script src="/js/viewProducts.js"></script>

<style>
.listTitle {
  color: #333;
  font-size: 24px;
  margin-bottom: 20px;
  font-family: 'Nunito', sans-serif;
}

.cardList {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.card {
  width: calc(33.33% - 20px);
  margin-bottom: 20px;
  background-color: #ccc;
  border: 1px solid #ccc;
  border-radius: 4px;
  transition: box-shadow 0.3s ease;
}

.card:hover {
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

.card-body {
  padding: 10px;
}

.card-title {
  font-size: 18px;
  margin-bottom: 10px;
  font-family: 'Nunito', sans-serif;
}

.card-text {
  margin-bottom: 5px;
}

.addToCart {
  text-align: center;
  margin-top: 10px;
}

.addToCart-btn {
  display: inline-block;
  padding: 5px 10px;
  border: none;
  background-color: #007bff;
  color: #ffffff;
  text-decoration: none;
  border-radius: 4px;
  transition: background-color 0.3s ease;
  font-family: 'Nunito', sans-serif;
}

.addToCart-btn:hover {
  background-color: #0062cc;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20px;
}

.pagination a {
  display: inline-block;
  padding: 5px;
  color: #007bff;
  text-decoration: none;
  transition: color 0.3s ease;
  font-family: 'Nunito', sans-serif;
}

.pagination a:hover {
  color: #0062cc;
}

.page-select {
  margin: 0 10px;
  padding: 5px;
  font-family: 'Nunito', sans-serif;
}

  
</style>