<!-- Dynamic List -->
<div id="productList">
  <div class="row">
    <div class="col-md-8">
      <table class="table table-light">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripción</th>
            <th scope="col">Precio</th>
            <th scope="col">Código</th>
            <th scope="col">Stock</th>
            <th scope="col">Categoría</th>
            <th scope="col">Foto</th>
            <th scope="col">Borrar</th>
          </tr>
        </thead>
        <tbody class="productListUpdated">
          {{#each products}}
           <tr>
              <th scope="row"> {{id}}</th>
              <td>{{title}}</td>
              <td>{{description}}</td>
              <td>{{price}}</td>
              <td>{{code}}</td>
              <td>{{stock}}</td>
              <td>{{category}}</td>
              <td>
                <img
                  src="{{thumbnails}}"
                  alt="{{id}}"
                  title="Foto de {{title}}"
                  style="width: 50px; min-height: 100%; max-height: 50px;"
                />
              </td>
              <td>
                <button
                  type="button"
                  class="btn btn-danger"
                  onclick="deleteProduct({{id}})"
                >X</button>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <h2 class="text-center my-4">Añadir Nuevo Producto</h2>
      <form id="form-products" style="margin: auto">
        <div style="margin-bottom: 16px">
          <div class="col-md-auto mx-3">
            <label for="title"> Título: </label>
            <input
              type="text"
              name="title"
              id="form-title"
              style="margin-bottom: 16px"
              class="form-control"
              placeholder="Agregar título del producto"
            />
          </div>
          <!-- Resto de los campos de formulario -->
          <!-- ... -->
          <div
            style="display: flex; justify-content: center; align-items: center"
          >
            <input
              type="submit"
              value="Crear producto"
              class="btn btn-primary"
            />
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
/* Estilos generales */
#productList {
  margin-top: 20px;
}

.table {
  width: 100%;
}

.table th,
.table td {
  padding: 10px;
}

.text-center {
  text-align: center;
}

.my-4 {
  margin-top: 40px;
  margin-bottom: 40px;
}

.form-control {
  width: 100%;
  margin-bottom: 10px;
}

.btn {
  padding: 5px 10px;
  border-radius: 4px;
}

.btn-primary {
  background-color: #007bff;
  color: #fff;
  border: none;
}

.btn-primary:hover {
  background-color: #0062cc;
  color: #fff;
}

.btn-danger {
  background-color: #dc3545;
  color: #fff;
  border: none;
}

.btn-danger:hover {
  background-color: #c82333;
  color: #fff;
}

/* Estilos específicos */
.productListUpdated tr:hover {
  background-color: #f5f5f5;
  cursor: pointer;
}

.productListUpdated td {
  vertical-align: middle;
}

.productListUpdated img {
  width: 50px;
  min-height: 100%;
  max-height: 50px;
}

#form-products {
  margin: auto;
  width: 80%;
}

#form-title {
  margin-bottom: 16px;
}



</style>